<MainScreen>
	name: "main"

	MDStackLayout:
		orientation: "tb-lr"
		MDFlatButton:
			text: "Randomize"
			on_press: app.go_forward_to("randomizer")
		MDFlatButton:
			text: "Random number"
			on_press: app.go_forward_to("random_number")

<Randomizer>
	lists_grid: lists_grid

	name: "randomizer"


	MDBoxLayout:
		orientation: "vertical"

		MDScrollView:
			do_scroll_x: False
			do_scroll_y: True
			size_hint: (1, 1)


			MDGridLayout:
				id: lists_grid
				adaptive_height: True
				cols: 1
				size_hint_y: None
				height: 100
				padding: 5, 5

<ListScreen>
	positions: positions

	name: "list"

	MDBoxLayout:
		orientation: "vertical"

		MDScrollView:
			do_scroll_x: False
			do_scroll_y: True
			size_hint: (1, 1)
			pos_hint: {"top": 1}

			MDGridLayout:
				id: positions
				adaptive_height: True
				size_hint_y: None
				cols: 1
				height: 100
				padding: 5, 5
		MDBoxLayout:
			size_hint_y: None
			orientation: "vertical"
			MDBoxLayout:
				orientation: "horizontal"
				MDTextField:
					id: count
					hint_text: "Count"
					input_filter: "int"
					size_hint_x: None
					width: 100
					text: "1"
				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: None
					MDLabel:
						text: "Unique"
						halign: "center"
						valign: "center"
					MDCheckbox:
						id: unique
						size_hint_x: None
						width: 100
						active: False

				MDFlatButton:
					text: "Randomize"
					on_press: root._list.get_random_position(int(count.text), unique.active)



<RandomNumber>
	name: "random_number"
	numbers: numbers
	MDBoxLayout:
		orientation: "vertical"

		MDLabel:
			id: numbers
			font_style: "H2"
			halign: "center"
			valign: "center"
			text: "0"

		MDBoxLayout:
			orientation: "horizontal"

			MDTextField:
				id: min_number
				hint_text: "Min"
				input_filter: "int"
				size_hint_x: None
				width: 100
				border_margin: 10
			MDTextField:
				id: max_number
				hint_text: "Max"
				input_filter: "int"
				size_hint_x: None
				width: 100
			MDTextField:
				id: count
				hint_text: "Count"
				input_filter: "int"
				size_hint_x: None
				width: 100
				text: "1"
			MDCheckbox:
				id: unique
				size_hint_x: None
				width: 100
				active: False

			MDFlatButton:
				text: "Randomize"
				on_press: root.get_numbers(int(min_number.text), int(max_number.text), int(count.text), unique.active)