<Toolbar>
	left_action_items: [["arrow-left", lambda x: app.go_back()]]

<Position>
	canvas.before:
		Color:
			rgba: 1, 0, 0, 0.1
		Rectangle:
			size: self.size
			pos: self.pos
	size_hint_y: None
	height: 50

<MainScreen>
	name: "main"

	MDStackLayout:
		orientation: "tb-lr"
		MDFlatButton:
			text: "Randomize"
			on_press: root.manager.current = "randomizer"

<Randomizer>
	lists_grid: lists_grid

	name: "randomizer"

	MDBoxLayout:
		orientation: "vertical"

		Toolbar:
			title: "Randomizer"

		MDScrollView:
			do_scroll_x: False
			do_scroll_y: True
			size_hint: (1, 1)


			MDGridLayout:
				id: lists_grid
				adaptive_height: True
				cols: 1
				size_hint_y: None
				height: 100
				padding: 5, 5

<ListScreen>
	positions: positions
	toolbar: toolbar

	name: "list"

	MDBoxLayout:
		orientation: "vertical"

		Toolbar:
			id: toolbar
			title: "List"

		MDScrollView:
			do_scroll_x: False
			do_scroll_y: True
			size_hint: (1, 1)
			pos_hint: {"top": 1}

			MDGridLayout:
				id: positions
				adaptive_height: True
				cols: 1
				size_hint_y: None
				height: 100
				padding: 5, 5